<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.HealMe" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <item name="colorPrimary">@color/dark_aqua</item>
        <item name="colorPrimaryVariant">@color/dark_aqua</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/aqua</item>
        <item name="colorSecondaryVariant">@color/aqua_80</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="colorControlHighlight">?attr/colorPrimary</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="NormalButton">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/lexend_deca</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="HeaderText">
        <item name="android:fontFamily">@font/lexend_deca</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="NormalText">
        <item name="android:fontFamily">@font/lexend_deca</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">@font/lexend_deca</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="subTitleText">
        <item name="android:fontFamily">@font/lexend_deca</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InvisibleButton">
        <item name="backgroundTint">@null</item>
        <item name="background">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:fontFamily">@font/lexend_deca</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="clickableText">
        <item name="android:fontFamily">@font/lexend_deca</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
</resources>