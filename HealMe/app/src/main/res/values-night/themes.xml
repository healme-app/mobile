<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealMe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/dark_aqua</item>
        <item name="colorPrimaryVariant">@color/dark_aqua_80</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/aqua</item>
        <item name="colorSecondaryVariant">@color/aqua_80</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MyApp.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryVariant">?attr/colorPrimaryVariant</item>
        <item name="colorSecondary">?attr/colorSecondary</item>
    </style>
</resources>